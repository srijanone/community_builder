<div class="row">
  <div class="col-md-6">
    <img class="card-img-top" src="https://place-hold.it/500x300" alt="Card image cap">
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">{{ data.title }}</h5>
        <p class="card-text">{{ data.short_title }}</p>
        <a href="{{ data.askQue.link }}">
          <button type="button" class="btn btn-primary">{{ data.askQue.button }}</button>
        </a>
        <a href="{{ data.getSupport.link }}">
          <button type="button" class="btn btn-primary">{{ data.getSupport.button }}</button>
        </a>
      </div>
    </div>
  </div>
</div>

